<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".Account">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:cardBackgroundColor="#302A2E">
<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:textColor="#FAFAFA"
    android:text="Welcome Here ! Have a look to your account and information about you that store in company data"/>
</android.support.v7.widget.CardView>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#FAFAFA"
                android:padding="0dp">


            <android.support.v7.widget.CardView
                android:layout_margin="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="true"
                app:cardBackgroundColor="#FFFF">
<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="9dp"
    android:textColor="#448fc9"
    android:textSize="16dp"
    android:text="Office Information"/>

                <TextView
                    android:id="@+id/textViewFN"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:layout_marginTop="49dp"
                    android:layout_marginLeft="79dp"
                    android:layout_marginBottom="10dp"
                    android:inputType="textMultiLine"
                    android:textColor="#202326"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginLeft="21dp"
                    android:background="@drawable/ic_account_box_black_24dp"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                app:cardBackgroundColor="#FFFF">

                <TextView
                    android:id="@+id/textViewDep"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="79dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#202326"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="21dp"

                    android:background="@drawable/ic_location_city_black_24dp"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView


                android:layout_width="match_parent"
                android:layout_height="70dp"

                app:cardBackgroundColor="#FFFF">
                <TextView
                    android:id="@+id/textViewDes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="79dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#202326"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="21dp"

                    android:background="@drawable/ic_person_black_24dp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/Phonecard"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                app:cardBackgroundColor="#FFFF">

                <TextView
                    android:clickable="false"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="9dp"
                    android:textColor="#448fc9"
                    android:textSize="15dp"
                    android:text="Personal Information (Editable)"/>

                <TextView
                    android:id="@+id/textViewPh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:layout_marginTop="49dp"
                    android:layout_marginLeft="79dp"
                    android:layout_marginBottom="9dp"
                    android:textColor="#202326"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="21dp"
                    android:background="@drawable/ic_call_end_black_24dp"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/Emailcard"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardBackgroundColor="#FFFF">
                <TextView
                    android:id="@+id/textViewEm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="79dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#202326"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="21dp"

                    android:background="@drawable/ic_email_black_24dp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/Passwordcard"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardBackgroundColor="#FFFF ">

                <TextView
                    android:id="@+id/textViewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="79dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#202326"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="21dp"
                    android:background="@drawable/ic_https_black_24dp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardBackgroundColor="#FFFF">
                <TextView
                    android:id="@+id/textViewHD"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="79dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#202326"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="21dp"
                    android:background="@drawable/ic_today_black_24dp"/>

            </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/Addresscard"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:cardBackgroundColor="#FFFF">
                    <TextView
                        android:id="@+id/textViewAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="79dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="#202326"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="21dp"
                        android:background="@drawable/ic_home_black_24dp"/>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:cardBackgroundColor="#FFFF">
                    <TextView
                        android:id="@+id/textViewCity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="79dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="#202326"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="21dp"
                        android:background="@drawable/ic_location_on_black_24dp"/>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:cardBackgroundColor="#FFFF">
                    <TextView
                        android:id="@+id/textViewCountry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:layout_marginTop="19dp"
                        android:layout_marginLeft="79dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="#202326"/>


                </android.support.v7.widget.CardView>

            </LinearLayout>


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>